<odoo>
    <data>
     <!--==report==============-->

        <record id="view_my_wizard_form" model="ir.ui.view">
            <field name="name">hrsystem.wizard.form</field>
            <field name="model">hrsystem.wizard</field>
            <field name="arch" type="xml">
                <form string="My Wizard">
                    <group>
                        <field name="month"/>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Report pdf" type="object" class="btn-primary"/>
                        <!-- <button name="action_print_report_EXCEL" string="Print Report exl" type="object" class="btn-primary"/> -->
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         <record id="action_my_wizard" model="ir.actions.act_window">
            <field name="name">My Wizard</field>
            <field name="res_model">hrsystem.wizard</field>
            <field name="view_mode">form</field>
             <!-- <field name="view_type">form</field> -->
            <field name="view_id" ref="view_my_wizard_form"/>
             <field name="target">new</field>
            <field name="binding_model_id" ref="model_hrsystem_wizard"/>
        </record>
                <!-- ================================ Pdf report2 ==================================== -->
            <record id="report_generate" model="ir.actions.report">
            <field name="name">My Wizard Report</field>
            <field name="type">ir.actions.report</field>
            <field name="model">hrsystem.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_system_test.report_generate_template2</field>
            <field name="report_file">hr_system_test.report_generate_template2</field>
            <!-- <field name="binding_model_id" ref="model_openacademy_wizard"/> -->
        </record>
        <report
            id="report_invoice_generate"
            model="hrsystem.wizard"
            string="My Wizard Report"
            report_type="qweb-pdf"
            name="hr_system_test.report_generate_template2"
            file="hr_system_test.report_generate_template2"
        
        />
     
        <!-- <report
            id="bill_report_xlsx2"
            model="openacademy.wizard"
            string="طباعة"
            report_type="xlsx"
            name="openacademy.bill_report_view_template"
            file="openacademy.bill_report_view_template"
            attachment_use="False"
            
        /> -->
           
           <template id="report_generate_template2">
            <t t-call="web.html_container">
                <t t-call="web.external_layout"> 
<style>
        /*------------------------------------------invoice---------------------*/
        .page {
                          size: A4;
                          margin: 0;
                           padding: 0;
                        }
                     
    h1,h2,h3,h4,h5,h6{
        margin: 0;
        padding: 0;
    }
    p{
        margin: 0;
        padding: 0;
    }
    .container2{
        width: 50%;
        margin-right: auto;
        margin-left: auto;
        margin-top: 20px;
    }
    .brand-section{
    background-color: green;
    padding: 10px 40px;
    }
    .logo{
        width: 50%;
    }

    .row{
        display: flex;
        flex-wrap: wrap;
    }
    .col-6{
        width: 50%;
        flex: 0 0 auto;
    }
    .text-white{
        color: #fff;
    }
    .company-details{
        float: right;
        text-align: right;
    }
    .body-section{
        padding: 16px;
        border: 3px solid green
    }
    .heading{
        font-size: 20px;
        margin-bottom: 08px;
    }
    .sub-heading{
        color: #262626;
        margin-bottom: 05px;
    }
    table{
        background-color: #fff;
        width: 100%;
        border-collapse: collapse;
    }
    table thead tr{
        border: 1px solid #111;
        background-color: #f2f2f2;
    }
    table td {
        vertical-align: middle !important;
        text-align: center;
    }
    table th, table td {
        padding-top: 08px;
        padding-bottom: 08px;
    }
    .table-bordered{
        box-shadow: 0px 0px 5px 0.5px gray;
    }
    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }
    .text-right{
        text-align: end;
    }
    .w-20{
        width: 20%;
    }
    .float-right{
        float: right;
    }
</style>
                    <div class="page">
                       <div class="container2">
    <div class="brand-section">
        <div class="row">
            <div class="col-6">
                    <h1 class="text-white">BOOKING INVOICE</h1>
                </div>
                    <div class="col-6">
                        <div class="company-details">
                            <p class="text-white">assdad asd  asda asdad a sd</p>
                            <p class="text-white">assdad asd asd</p>
                            <p class="text-white">+91 888555XXXX</p>
                        </div>
                    </div>
                </div>
            </div>
    
        <div class="body-section">
            <div class="row">
                <div class="col-6">
                    <h2 class="heading">Invoice No.: 001</h2>
                    <p class="sub-heading">Tracking No. fabcart2025 </p>
                    <p class="sub-heading">From Date:<span t-esc="datas['month']" /> </p>
                    <p class="sub-heading">Email Address: @i.Accounts.Email </p>
                </div>
                <div class="col-6">
                    <p class="sub-heading">Full Name:<span t-esc="datas['year']"/> </p>
                    <p class="sub-heading">Phone Number:@i.mobile  </p>
                </div>
            </div>
        </div>
    
        <div class="body-section">
            <h3 class="heading">DATA</h3>
            <br />
            <table class="table-bordered">
                <thead>
                    <tr>
                        <th class="w-20">اسم الموظف</th>
                        <th class="w-20">صافي الراتب</th>
                        <th class="w-20">المكافأة</th>
                        <th class="w-20">الخصم</th>
                        <th class="w-20">الشهر</th>
                        <th class="w-20"> السنة</th>
                        <th class="w-20"> أيام الاجازات</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="bill">
                       <t t-foreach="bill.transaction_details_ids" t-as="course">
                    <tr>
                        <!-- <td><span t-esc="bill.partner_names"/></td> -->
                        <td><span t-field="course.empolyee_id"/></td>
                        <td><span t-field="course.net_salary"/></td>
                        <td><span t-field="course.rewards"/></td>
                        <td><span t-field="course.discount"/></td>
                        <td><span t-field="course.month"/></td>
                            <td><span t-field="course.year"/></td>
                        <td><span t-field="course.off_days"/></td>

                    </tr>
                   
                                  
                       
                     </t>
                </t>
                </tbody>
            </table>
            <br />
            <!-- <h3 class="heading">Payment Status: Paid</h3>
            <h3 class="heading">Payment Mode: Cash on Delivery</h3> -->
        </div>
    
        <div class="body-section">
            <p>
                @Copyright 2021 - Fabcart. All rights reserved.
                <a href="#" class="float-right">www.fundaofwebit.com</a>
            </p>
        </div>
        <br />
      
    
    </div>
                    </div>
                </t> 
             </t> 
        </template>
    </data>
</odoo>


   