<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
     <!--==report==============-->

        <record id="view_my_wizard_form" model="ir.ui.view">
            <field name="name">hrsystem.wizard.form</field>
            <field name="model">hrsystem.wizard</field>
            <field name="arch" type="xml">
                <form string="My Wizard">
                    <group>
                        <field name="month"/>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Report pdf" type="object" class="btn-primary"/>
                        <!-- <button name="action_print_report_EXCEL" string="Print Report exl" type="object" class="btn-primary"/> -->
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         <record id="action_my_wizard" model="ir.actions.act_window">
            <field name="name">My Wizard</field>
            <field name="res_model">hrsystem.wizard</field>
            <field name="view_mode">form</field>
             <!-- <field name="view_type">form</field> -->
            <field name="view_id" ref="view_my_wizard_form"/>
             <field name="target">new</field>
            <field name="binding_model_id" ref="model_hrsystem_wizard"/>
        </record>
                <!-- ================================ Pdf report2 ==================================== -->
            <record id="report_generate" model="ir.actions.report">
            <field name="name">My Wizard Report</field>
            <field name="type">ir.actions.report</field>
            <field name="model">hrsystem.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_system_test.report_generate_template2</field>
            <field name="report_file">hr_system_test.report_generate_template2</field>
            <!-- <field name="binding_model_id" ref="model_openacademy_wizard"/> -->
        </record>
        <report
            id="report_invoice_generate"
            model="hrsystem.wizard"
            string="My Wizard Report"
            report_type="qweb-pdf"
            name="hr_system_test.report_generate_template2"
            file="hr_system_test.report_generate_template2"
        
        />
     
        <!-- <report
            id="bill_report_xlsx2"
            model="openacademy.wizard"
            string="طباعة"
            report_type="xlsx"
            name="openacademy.bill_report_view_template"
            file="openacademy.bill_report_view_template"
            attachment_use="False"
            
        /> -->
           
           <template id="report_generate_template2">
         <t t-call="web.html_container">
           <t t-call="web.internal_layout">
             
<head>
<meta charset="utf-8"/>
 <title><t t-esc="title or 'Odoo Report'"/></title>
  <link href="/hr_system_test/static/src/css/style.css" rel="stylesheet" />
  
  </head>
                     
<div class='page'>

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="hero">

     
        <div style=" display: flex;
                            flex-direction: column; justify-content: center;
                            align-items: center;
                            text-align: center;position: relative;margin-top:10px ;">
          <h1 >تقرير كشف رواتب الموظفين</h1>
          <div style=" display: flex;
                            flex-direction: row; justify-content: center;
                            align-items: center;
                            text-align: center; ">
            <span style="font-size: 33px;color: gray;"  t-esc="datas['year']"/> 
            <span style="font-size: 33px;color: gray;">/</span>
          <span style="font-size: 33px;color: gray;" t-esc="datas['month']" /> 
          </div>
          
        </div>
         <div class=" hero-img" >
          <img src="/hr_system_test/static/src/img/hero-img.png"   style="height: 13rem; width: 15rem;" />
        </div>
     
   

  </section><!-- End Hero -->

  <br/>
  <br/>
 <br/>
  <br/> <br/>
 <br/> <br/>
     <table >
              
                    <tr>
                        <th >اسم الموظف</th>
                        <th >صافي الراتب</th>
                        <th >المكافأة</th>
                        <th >الخصم</th>
                        <th >الشهر</th>
                        <th > السنة</th>
                        <th > أيام الاجازات</th>
                       
                    </tr>
              
                    <t t-foreach="docs" t-as="course">
                       <!-- <t t-foreach="bill.transaction_details_ids" t-as="course"> -->
                    <tr>
                        <!-- <td><span t-esc="bill.partner_names"/></td> -->
                        <td><span t-field="course.empolyee_id"/></td>
                        <td><span t-field="course.net_salary"/></td>
                        <td><span t-field="course.rewards"/></td>
                        <td><span t-field="course.discount"/></td>
                        <td><span t-field="course.month"/></td>
                            <td><span t-field="course.year"/></td>
                        <td><span t-field="course.off_days"/></td>

                    </tr>
                   
                                  
                       
                     </t>
                <!-- </t> -->
                
            </table>
  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">

    <div >
      <div class="copyright">
