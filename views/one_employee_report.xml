<div class='page'>

  <div class="oe_structure">
  <center>
  <!-- ======= Hero Section ======= -->
  <section id="hero" class="hero">

     
        <div style=" display: flex;
                            flex-direction: column; justify-content: center;
                            align-items: center;
                            text-align: center;position: relative; margin-top:8px ;">
          <h1>تقرير كشف راتب الموظف</h1>
         <span style="font-size: 33px;color: gray;"  t-esc="datas['name']"/> 
        </div>
        <div class=" hero-img" >
          <img src="/hr_system_test/static/src/img/hero-img.png"  style="height: 13rem; width: 15rem;" />
        </div>
     
   

  </section><!-- End Hero -->

  <br/>
  <br/>
 <br/>
  <br/> 
  <br/>
<table>
    <tr>
        <th> إسم الموظف'</th>
        <th>إجمالي الراتب '</th>
        
       
         <th>  رقم الجوال"'</th>
         <th> الوظيفة"</th>
           <th> القسم"</th>

    </tr>
      <t t-foreach="docs" t-as="doc">
    <tr>
         <td> <span t-esc="doc.name"/></td>
                        <td> <span t-esc="doc.total_salary"/></td>
                        <!-- <td> <span t-esc="doc.emplo_checkbox"/></td> -->
                        <td> <span t-esc="doc.mobile_phone"/></td>
                        <td><span t-esc="doc.job_id.name"/></td>
                        <td><span t-esc="doc.department_id.name"/></td>
    </tr>
    </t>
</table>
                       
                        <!-- cource inside-->
                      <br />
                            <h3 style="text-align: right;">نفاصيل الموظف  :</h3>
                            
<table>
    <tr>
   
                        <th >صافي الراتب </th>
                        <th >المكافأة</th>
                        <th >الخصم</th>
                        <th >الشهر</th>
                        <th > السنة</th>
                        <th > أيام الاجازات</th>

    </tr>
     <t t-foreach="doc.detail_ids" t-as="course">
    <tr>
    
       <td><span t-field="course.net_salary"/></td>
                                        <td><span t-field="course.rewards"/></td>
                                        <td><span t-field="course.discount"/></td>
                                        <td><span t-field="course.mounth"/></td>
                                         <td><span t-field="course.year"/></td>
                                        <td><span t-field="course.off_days"/></td>

    </tr>
                                    </t>

</table>

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">

    <div >
      <div class="copyright">
     Copyright <strong><span>FlexStart</span></strong>. All Rights Reserved
      </div>
     
    </div>
  </footer><!-- End Footer -->

</center>
</div>
</div>     
                     
         
